!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "NOODP", :name => "ROBOTS"}/
    %title
      = page_title
    = stylesheet_link_tag :application, :media => 'all'
    = csrf_meta_tags
  %body{:class => body_class}
    %div#site_header
      - if signed_in?
        = current_user.email
        = link_to 'Sign out', sign_out_path, :method => :delete
      - else
        = link_to 'Sign in', sign_in_path
    = render 'flashes'
    = yield
    = render 'javascript'