= content_for :second_header do
  %h1
    Кураторы / #{parent.fio}
= simple_form_for parent do |f|
  %h2 Отметьте кураторов
  = hidden_field_tag "person[user_ids][]", nil
  - User.all.each do |user|
    = label_tag dom_id(user) do
      = check_box_tag "person[user_ids][]", user.id, parent.user_ids.include?(user.id), id: dom_id(user)
      = user.email
  .controls
    = f.submit "Сохранить"
