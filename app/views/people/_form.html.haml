= simple_form_for person do |f|
  .fields
    .about
      = f.input :fio
      = f.input :birth_date, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, order: [:day, :month, :year]
      = f.input :about, input_html: {class: :bigger}
      = f.input :address
      = f.input :current_account
    .prison_data
      = f.input :status
      = f.input :accused_for, input_html: {class: :smaller}
      = f.input :imprisoned_date
      = f.input :release_date
      = f.input :accounts
      = f.input :contacts
  .controls
    = f.submit "Сохранить"